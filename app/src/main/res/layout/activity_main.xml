<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.bilingual_dictionary_id_eng.primary_ui.main.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dictionary"
        android:contentDescription="@string/img_view_splash_screen"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="#212121"/>

    <ImageView
        android:id="@+id/img_view_icon_kamus"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/img_view_icon_app"
        android:src="@drawable/open_book"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@id/img_view_icon_kamus"
        android:id="@+id/linearLayout">

        <View
            android:layout_width="30dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/first_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="end"
            android:text="@string/bilingual_dictionary"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="28sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/second_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif-condensed"
        android:gravity="start"
        android:text="@string/id_eng"
        android:textAlignment="center"
        android:textColor="#E56284"
        android:textSize="28sp"
        android:layout_below="@+id/linearLayout" />
</RelativeLayout>
